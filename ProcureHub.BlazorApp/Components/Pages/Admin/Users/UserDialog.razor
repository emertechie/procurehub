@using ProcureHub.Features.Users
@using ProcureHub.Infrastructure

@inject DialogService DialogService
@inject NotificationService NotificationService
@inject IQueryHandler<GetUserById.Request, GetUserById.Response?> GetUserHandler
@inject ICommandHandler<CreateUser.Command, Result<string>> CreateUserHandler
@inject ICommandHandler<UpdateUser.Command, Result> UpdateUserHandler

<RadzenStack Gap="1rem">
    @if (_errorMessage != null)
    {
        <RadzenAlert AlertStyle="AlertStyle.Danger" AllowClose="false">
            @_errorMessage
        </RadzenAlert>
    }
    
    <RadzenStack Orientation="Orientation.Vertical" Gap="0.5rem">
        <RadzenLabel Text="Email" Component="EmailInput" />
        <RadzenTextBox Name="EmailInput" @bind-Value="@_model.Email" Placeholder="Enter your email" />
    </RadzenStack>
    
    <RadzenStack Orientation="Orientation.Vertical" Gap="0.5rem">
        <RadzenLabel Text="First Name" Component="FirstNameInput" />
        <RadzenTextBox Name="FirstNameInput" @bind-Value="@_model.FirstName" Placeholder="Enter your first name" />
    </RadzenStack>
    
    <RadzenStack Orientation="Orientation.Vertical" Gap="0.5rem">
        <RadzenLabel Text="Last Name" Component="LastNameInput" />
        <RadzenTextBox Name="LastNameInput" @bind-Value="@_model.LastName" Placeholder="Enter your last name" />
    </RadzenStack>

    @if (!IsEdit)
    {
        <RadzenStack Orientation="Orientation.Vertical" Gap="0.5rem">
            <RadzenLabel Text="Password" Component="PasswordInput" />
            <RadzenPassword Name="PasswordInput" @bind-Value="@_model.Password" Placeholder="Enter your password" />
        </RadzenStack>
    }

    <RadzenStack Orientation="Orientation.Horizontal" Gap="0.5rem">
        <RadzenButton Text="Save" Click="@OnSubmit" ButtonStyle="ButtonStyle.Primary" Disabled="@_isSaving" />
        <RadzenButton Text="Cancel" Click="@Cancel" ButtonStyle="ButtonStyle.Light" Disabled="@_isSaving" />
    </RadzenStack>
</RadzenStack>

@code {
    [Parameter] public Guid? UserId { get; set; }

    private UserFormModel _model = new();
    private bool _isSaving;
    private string? _errorMessage;
    private bool IsEdit => UserId.HasValue;

    private class UserFormModel
    {
        public string Email { get; set; } = "";
        public string FirstName { get; set; } = "";
        public string LastName { get; set; } = "";
        public string Password { get; set; } = "";
    }

    protected override async Task OnInitializedAsync()
    {
        if (IsEdit)
        {
            await LoadUser();
        }
    }

    private async Task LoadUser()
    {
        var user = await GetUserHandler.HandleAsync(new GetUserById.Request(UserId!.Value.ToString()), CancellationToken.None);
        if (user == null)
        {
            _errorMessage = "User not found";
            return;
        }

        _model.Email = user.Email;
        _model.FirstName = user.FirstName;
        _model.LastName = user.LastName;
    }

    private async Task OnSubmit()
    {
        _errorMessage = null;
        _isSaving = true;

        try
        {
            if (IsEdit)
            {
                var updateCommand = new UpdateUser.Command(
                    UserId!.Value.ToString(),
                    _model.Email,
                    _model.FirstName,
                    _model.LastName
                );

                var result = await UpdateUserHandler.HandleAsync(updateCommand, CancellationToken.None);
                if (result.IsSuccess)
                {
                    NotificationService.Notify(NotificationSeverity.Success, "Success", "User updated");
                    DialogService.Close(true);
                }
                else
                {
                    _errorMessage = result.Error.Message;
                }
            }
            else
            {
                var createCommand = new CreateUser.Command(
                    _model.Email,
                    _model.Password,
                    _model.FirstName,
                    _model.LastName
                );

                var result = await CreateUserHandler.HandleAsync(createCommand, CancellationToken.None);
                if (result.IsSuccess)
                {
                    NotificationService.Notify(NotificationSeverity.Success, "Success", "User created");
                    DialogService.Close(true);
                }
                else
                {
                    _errorMessage = result.Error.Message;
                }
            }
        }
        finally
        {
            _isSaving = false;
        }
    }

    private void Cancel()
    {
        DialogService.Close(false);
    }
}
