@page "/counter"
@attribute [Authorize]

@using Microsoft.AspNetCore.Authorization

<PageTitle>Counter</PageTitle>

<RadzenStack Gap="1.5rem">
    <RadzenText TextStyle="TextStyle.H4">Counter</RadzenText>
    <RadzenCard>
        <RadzenStack Gap="1rem">
            <RadzenText TextStyle="TextStyle.Body1">Current count: <strong>@currentCount</strong></RadzenText>
            <RadzenButton Text="Click me" ButtonStyle="ButtonStyle.Primary" Click="@IncrementCount"/>
        </RadzenStack>
    </RadzenCard>
</RadzenStack>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
