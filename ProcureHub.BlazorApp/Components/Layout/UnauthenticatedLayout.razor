@inherits LayoutComponentBase

<RadzenLayout Style="min-height: 100vh; display: flex; align-items: center; justify-content: center; background-color: var(--rz-base-200);">
    <RadzenBody Style="padding: 0;">
        <RadzenCard Style="max-width: 500px; width: 100%; margin: 2rem auto;">
            <RadzenStack Gap="2rem">
                <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center" Gap="0.5rem">
                    <RadzenIcon Icon="shopping_cart" Style="font-size: 3rem; color: var(--rz-primary);"/>
                    <RadzenStack Gap="0">
                        <RadzenText TextStyle="TextStyle.H4" Style="margin: 0; font-weight: 600;">ProcureHub</RadzenText>
                        <RadzenText TextStyle="TextStyle.Body2" Style="margin: 0; color: var(--rz-text-secondary-color);">Procurement System</RadzenText>
                    </RadzenStack>
                </RadzenStack>

                @Body
            </RadzenStack>
        </RadzenCard>
    </RadzenBody>
</RadzenLayout>
