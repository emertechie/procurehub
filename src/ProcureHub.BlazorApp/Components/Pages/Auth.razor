@page "/auth"
@attribute [Authorize]

@using Microsoft.AspNetCore.Authorization

<PageTitle>Auth</PageTitle>

<RadzenStack Gap="1.5rem">
    <RadzenText TextStyle="TextStyle.H4">You are authenticated</RadzenText>
    <RadzenCard>
        <AuthorizeView>
            <RadzenText TextStyle="TextStyle.Body1">Hello @context.User.Identity?.Name!</RadzenText>
        </AuthorizeView>
    </RadzenCard>
</RadzenStack>
